<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- server action  -->
    <data>
        <record id="action_mark_as_done" model="ir.actions.server">
            <field name="name">Mark As Done</field>
            <field name="model_id" ref="school_management.model_student_name" />
            <field name="state">code</field>
            <field name="code">action = records.mark_as_done()</field>

        </record>

        <record id="action_mark_as_cancle" model="ir.actions.server">
            <field name="name">Mark As Cancle</field>
            <field name="model_id" ref="school_management.model_student_name" />
            <field name="state">code</field>
            <field name="code">action = records.mark_as_cancle()</field>
        </record>
    </data>
</odoo>
