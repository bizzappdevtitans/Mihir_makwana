<?xml version="1.0" encoding="utf-8" ?>
<odoo>
   <!--  Inherited account.move model view to display added fields in sale
    invoice form view #T00378 -->
    <record id="account_move_view_form" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit.sale</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@id='header_left_group']" position="inside">
                <field name="customer_number" />
                <field name="delivery_description" />
                <field name="invoice_description" />
            </xpath>
        </field>
    </record>
</odoo>
