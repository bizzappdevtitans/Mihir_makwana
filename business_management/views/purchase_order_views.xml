<?xml version="1.0" encoding="utf-8" ?>
<odoo>
   <!--  Inherited account.move model view to display added fields in purchase order form view #T00393-->
    <record model="ir.ui.view" id="purchase_order_form_view">
        <field name="name">purchase.order.view.form.inherit.purchase.order</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="purchase_description" />
            </xpath>
        </field>
    </record>
</odoo>
