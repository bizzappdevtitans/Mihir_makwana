<?xml version="1.0" encoding="utf-8" ?>
<odoo>
   <!--  Inherited account.move model view to display added fields in delivery order form view #T00394 -->
    <record model="ir.ui.view" id="stock_picking_view_form">
        <field name="name">stock.picking.view.form.inherit.sale</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="delivery_description" />
            </xpath>
        </field>
    </record>
</odoo>
