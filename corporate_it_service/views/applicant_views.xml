<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- tree view  -->
    <record id="applicant_tree_view_for_corporate_it_services" model="ir.ui.view">
        <field name="name"> applicant_tree_view</field>
        <field name="model">it.applicant</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="boolean" />
                <field name="state_kanban" widget="state_selection" readonly="1" />
                <field name="applicant_id" />
                <field name="applicant_email" />
                <field name="position_ids" />
                <field name="priority_selection" widget="priority" optional="show" />
                <field name="applicant_degree" />
                <field name="applicant_date" />
                <field name="salary_expect" />
                <field name="platform_via" />
                <field name="mobile" />
                <field name="availability" optional="hide" />
            </tree>
        </field>
    </record>

