<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- wizard for #T00483 -->
    <record id="split_sale_order_wizard" model="ir.ui.view">
        <field name="name">split.sale.order.wizard</field>
        <field name="model">split.sale.order.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="sale_order_id" />
                        <field name="is_split_sale_order_based_on_category" />
                        <field name="options" />
                        <field
                            name="sale_order_line_ids"
                            attrs="{'invisible' : [('options','!=','selected_lines')]}"
                        />
                    </group>
                </sheet>
                <footer>
                    <button
                        name="action_split_done"
                        string="SPLIT"
                        class="btn-primary"
                        type="object"
                    />
                  <button string="CANCEL" class="btn-secondary" special="cancel" />
               </footer>
            </form>
        </field>
    </record>
    <!-- action for #T00483 -->
    <record id="action_split_so_wizard" model="ir.actions.act_window">
        <field name="name">SPLIT SALE ORDER </field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">split.sale.order.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


</odoo>
